<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="招聘信息的标题"
            android:textColor="#727272"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zuobiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小店区"
                    android:textColor="#bbbbbb" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shijian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分钟前"
                    android:textColor="#bbbbbb" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/taoxin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小店区"
                    android:textColor="#bbbbbb" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2"
        />
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="16dp">
        <RelativeLayout
            android:id="@+id/jianzhileixing"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_01"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_01"
                android:text="兼职类型"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="艺术设计"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/zhaoping"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_02"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_02"
                android:text="招聘人数"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20人"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/gongzi"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_03"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_03"
                android:text="工资待遇"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="300/小时"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/gongzuoshijian"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_04"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_04"
                android:text="工作时间"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2015.11.11-12.12"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/gongzuoneirong"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_05"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_05"
                android:text="工作内容"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2015.11.11-12.12"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/gongzuodizhi"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_06"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_06"
                android:text="工作地址"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="平阳路学府街"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />
        <RelativeLayout
            android:id="@+id/lianxiren"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/zhiwei_icon_07"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/per_icon_04"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhiwei_icon_07"
                android:text="联系人"
                android:textColor="#5F5F5F"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="张女士"
                android:layout_centerVertical="true"
                android:textColor="#A9A9A9"
                android:textSize="20sp" />

        </RelativeLayout>
        <View style="@style/Line" />

        </LinearLayout>
</LinearLayout>