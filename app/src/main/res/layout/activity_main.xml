<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/maintab_toolbar_bg">

        <RadioButton
            android:id="@+id/radio_button0"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/tab_home_btn"
            android:textColor="@drawable/tab_text_color"
            android:drawablePadding="2dp"
            android:background="@drawable/tab_buttonstyle"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/radio_button1"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/tab_news_btn"
            android:textColor="@drawable/tab_text_color"
            android:drawablePadding="2dp"
            android:background="@drawable/tab_buttonstyle"
            android:text="淘生兼"/>

        <RadioButton
            android:id="@+id/radio_button2"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/tab_activity_btn"
            android:textColor="@drawable/tab_text_color"
            android:drawablePadding="2dp"
            android:background="@drawable/tab_buttonstyle"
            android:text="生兼社区"/>

        <RadioButton
            android:id="@+id/radio_button3"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/tab_setting_btn"
            android:textColor="@drawable/tab_text_color"
            android:drawablePadding="2dp"
            android:text="个人中心"/>

    </RadioGroup>

</LinearLayout>