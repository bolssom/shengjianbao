<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shangpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/ilv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@mipmap/shangpin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ilv"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="人身意外伤害险"
                android:textColor="#5e5e5e"
                android:textSize="14sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:src="@mipmap/jifentu"/>
    <TextView
        android:id="@+id/jifenshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999"
        android:textColor="#fff157"
        android:layout_marginRight="10dp"
        android:textSize="13sp" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="3dp"
        android:src="@mipmap/qian"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100000"
        android:textColor="#fff157"
        android:layout_marginRight="10dp"
        android:textSize="13sp" />
</LinearLayout>


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有2人兑换"
                android:layout_marginBottom="5dp"
                android:textColor="#a1a1a1"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="积分兑换"
                    android:textSize="12sp"
                    android:background="@drawable/bg_btn_jfdh"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="余额购买"
                    android:textSize="12sp"
                    android:background="@drawable/bg_btn_yegm"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View style="@style/Line" />
</LinearLayout>