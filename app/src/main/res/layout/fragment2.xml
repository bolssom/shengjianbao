<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <com.blossom.workrecd.View.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.blossom.workrecd.View.ExpandTabView
        android:id="@+id/expandtab_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/taoshengjian_01"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:clickable="true">
               <ImageView
                   android:id="@+id/ilv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/fengkuang"
                   android:padding="2dp"
                   android:layout_marginLeft="3dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"/>
               <LinearLayout
                   android:layout_toRightOf="@+id/ilv"
                   android:layout_toLeftOf="@+id/irv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="这里是信息标题名称"
                       android:textSize="18sp"
                       android:textColor="#8c8c8c"/>
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:orientation="horizontal">
                       <TextView
                           android:id="@+id/price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="￥199"
                           android:textColor="#ff9b00"
                           android:textSize="22sp" />

                       <TextView
                           android:id="@+id/dw_price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/price"
                           android:paddingTop="5dp"
                           android:text="/天"
                           android:textColor="#bababa"
                           android:textSize="18sp" />

                   </RelativeLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:paddingTop="5dp">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/zuobiao"
                           android:layout_gravity="bottom"
                           android:layout_marginBottom="3dp"/>

                       <TextView
                           android:id="@+id/location"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:layout_marginBottom="2dp"
                           android:paddingLeft="2dp"
                           android:paddingRight="20dp"
                           android:text="小店区"
                           android:textColor="#a1a1a1"
                           android:textSize="14sp" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/shijian" />

                       <TextView
                           android:id="@+id/datetime"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:layout_marginBottom="2dp"
                           android:paddingLeft="2dp"
                           android:text="1分钟前"
                           android:textColor="#a1a1a1"
                           android:textSize="14sp" />
                   </LinearLayout>

               </LinearLayout>
               <ImageView
                   android:id="@+id/irv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"
                   android:src="@mipmap/youjiantou"/>
           </RelativeLayout>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
           <View style="@style/Line" />
           <include layout="@layout/item_taoshengjian"/>
       </LinearLayout>
   </ScrollView>





    </LinearLayout>