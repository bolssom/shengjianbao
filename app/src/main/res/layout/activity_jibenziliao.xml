<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#fed809"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#fed809"
            android:minWidth="30dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/title_back_btn" />

        <TextView
            android:id="@+id/title_text"
            style="@style/Text.Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="-15dp"
            android:layout_weight="1"
            android:text="基本资料" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/reg_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_01"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/per_icon_04" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_01"
                            android:background="@color/transparent"
                            android:hint="用户昵称"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/reg_sex"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_06"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/xingbie" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_06"
                            android:background="@color/transparent"
                            android:text="性别选择"
                            android:textColor="#606060"
                            android:textSize="16sp" />
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal" >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/DyTextStyle"
                                android:checked="true"
                                android:text="男" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/DyTextStyle"
                                android:text="女" /></RadioGroup>

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/reg_shouji"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_02"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/mima_icon_01" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_02"
                            android:background="@color/transparent"
                            android:hint="手机号码"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />
                        <TextView
                            style="@style/RightIconStyle"
                            android:text="1800000000（已绑定）"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View style="@style/Line" />

                    <RelativeLayout
                        android:id="@+id/reg_yanzheng"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_03"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/mima_icon_02" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_03"
                            android:background="@color/transparent"
                            android:hint="学　　校"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />


                    </RelativeLayout>

                    <View style="@style/Line" />

                    <RelativeLayout
                        android:id="@+id/reg_pass1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_04"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/mima_icon_03" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_04"
                            android:background="@color/transparent"
                            android:hint="学　　院"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/ruxuenianfen"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_10"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/shijian" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_10"
                            android:background="@color/transparent"
                            android:hint="入学年份"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/chushengnianyue"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_11"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/shangsheng" />

                        <TextView
                            android:id="@+id/nianyue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_11"
                            android:background="@color/transparent"
                            android:text="出生年月"
                            android:textColor="#606060"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:id="@+id/nian"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/bg_edittext"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="年"
                                android:textSize="15sp" />
                            <EditText
                                android:id="@+id/yue"
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/bg_edittext"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="月"
                                android:layout_marginRight="5dp"
                                android:textSize="15sp" />
                            <EditText
                                android:id="@+id/ri"
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/bg_edittext"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/reg_pass2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_05"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/mima_icon_03" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_05"
                            android:background="@color/transparent"
                            android:hint="专　　业"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>
                    <View style="@style/Line" />



                    <RelativeLayout
                        android:id="@+id/reg_sg"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_08"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/reg_icon_08" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_08"
                            android:background="@color/transparent"
                            android:hint="身　　高"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View style="@style/Line" />
                    <RelativeLayout
                        android:id="@+id/reg_tz"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/reg_icon_09"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/reg_icon_09" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reg_icon_09"
                            android:background="@color/transparent"
                            android:hint="体　　重"
                            android:textColorHint="#606060"
                            android:textSize="16sp" />

                    </RelativeLayout>
                    <View style="@style/Line" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        android:hint="个人简介......"
                        android:gravity="top"
                        android:textColorHint="#606060"
                        android:textSize="14sp"
                        android:background="@drawable/bg_edittxt_h"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/user_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_selector"
                    android:text="保存"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>