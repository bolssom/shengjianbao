<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#fed809"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#fed809"
            android:minWidth="30dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/title_back_btn" />

        <TextView
            android:id="@+id/title_text"
            style="@style/Text.Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:paddingLeft="-15dp"
            android:text="银行卡详情" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f3f3ee" />

    <View style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/mima_icon_01"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/per_icon_04" />

                <TextView
                    android:id="@+id/tit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@id/mima_icon_01"
                    android:background="@color/transparent"
                    android:text="姓名"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/tit_name"
                    android:background="@color/transparent"
                    android:text="XXXX"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View style="@style/Line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/ka"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ka" />

                <TextView
                    android:id="@+id/tit_ka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/ka"
                    android:layout_marginRight="30dp"
                    android:background="@color/transparent"
                    android:text="卡号"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/kahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/tit_ka"
                    android:background="@color/transparent"
                    android:text="123132132131321321"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/Line" />

            <RelativeLayout
                android:id="@+id/kaihuhang"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/dingwei"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/dingweilist" />

                <TextView
                    android:id="@+id/tit_kaihu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@id/dingwei"
                    android:background="@color/transparent"
                    android:hint="开户行"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/kaihu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"

                    android:layout_toRightOf="@+id/tit_kaihu"
                    android:background="@color/transparent"
                    android:hint="太原市迎泽区支行"
                    android:textColor="#5f5f5f"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/Line" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/jiechu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_login_bg"
            android:text="解除绑定"
            android:textColor="@color/white"
            android:layout_marginBottom="13dp"
            android:textSize="18sp" />
        <Button
            android:id="@+id/tianjia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_lv"
            android:text="添加银行卡"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:text="\@2015 生兼包"
            android:textColor="#7b765c"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
